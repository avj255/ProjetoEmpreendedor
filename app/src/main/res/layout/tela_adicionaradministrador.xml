<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/CustomTela"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <EditText
            android:id="@+id/editTextConfirmaSenhaAdm"
            style="@style/CustomEdit"
            android:layout_width="352dp"
            android:layout_height="39dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Confirmar Senha"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextSenhaAdm" />

        <EditText
            android:id="@+id/editTextCpfAdm"
            style="@style/CustomEdit"
            android:layout_width="352dp"
            android:layout_height="39dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="CPF"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextNomeAdm" />

        <EditText
            android:id="@+id/editTextNomeAdm"
            style="@style/CustomEdit"
            android:layout_width="352dp"
            android:layout_height="39dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Nome"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtitTextCadastroUsuarioAdm" />

        <Button
            android:id="@+id/botaoCancelarCadastroAdm"
            style="@style/CustomBotao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="44dp"
            android:onClick="CancelarAdm"
            android:text="Cancelar"
            app:layout_constraintLeft_toLeftOf="@+id/editTextConfirmaSenhaAdm"
            app:layout_constraintTop_toBottomOf="@+id/editTextConfirmaSenhaAdm" />

        <Button
            android:id="@+id/botaoConfirmarCadastroAdm"
            style="@style/CustomBotao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:layout_marginRight="76dp"
            android:onClick="CadastrarNovoUsuarioAdm"
            android:text="Cadastrar"
            app:layout_constraintRight_toRightOf="@+id/editTextConfirmaSenhaAdm"
            app:layout_constraintTop_toBottomOf="@+id/editTextConfirmaSenhaAdm" />

        <TextView
            android:id="@+id/branco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintRight_toRightOf="@+id/botaoConfirmarCadastroAdm"
            app:layout_constraintTop_toBottomOf="@+id/botaoConfirmarCadastroAdm" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="serif"
            android:text="Cadastro Administrador"
            android:textColor="@color/Preto"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edtitTextCadastroUsuarioAdm"
            style="@style/CustomEdit"
            android:layout_width="352dp"
            android:layout_height="39dp"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:hint="Usuário"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <EditText
            android:id="@+id/editTextEmailAdm"
            style="@style/CustomEdit"
            android:layout_width="352dp"
            android:layout_height="39dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextCpfAdm" />

        <EditText
            android:id="@+id/editTextConfirmaEmailAdm"
            style="@style/CustomEdit"
            android:layout_width="352dp"
            android:layout_height="39dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Confirma E-mail"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextEmailAdm" />

        <EditText
            android:id="@+id/editTextSenhaAdm"
            style="@style/CustomEdit"
            android:layout_width="352dp"
            android:layout_height="39dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Senha"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextConfirmaEmailAdm" />

        <TextView
            android:id="@+id/textViewCadastroInválidoAdm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/LoginInvalido"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="15dp"
            android:visibility="invisible"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextConfirmaSenhaAdm" />

        <ProgressBar
            android:id="@+id/progressBarCadastroAdm"
            style="?android:attr/progressBarStyle"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:visibility="invisible"
            android:indeterminateTint="@color/Laranja"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

